{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "paths": {
      "METHODS/*": ["src/methods/*"],
      "OAUTH/*": ["src/oauth/*"],
      "SERVER/*": ["src/server/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["."]
}
